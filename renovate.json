{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "groupName": "docker-base-updates",
      "pinDigests": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["actualbudget/actual-server"],
      "groupName": "docker-latest-alpine-tag-automerge",
      "versioning": "loose",
      "allowedVersions": "/latest-alpine$/",
      "pinDigests": true,
      "separateMinorPatch": false,
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "groupName": "docker-latest-tag-automerge",
      "versioning": "loose",
      "allowedVersions": "/latest$/",
      "matchPackageNames": [
        "automaticrippingmachine/automatic-ripping-machine",
        "cloudflare/cloudflared",
        "grafana/alloy",
        "plexinc/pms-docker",
        "semaphoreui/semaphore",
        "library/traefik",
        "qmcgaw/gluetun",
        "lscr.io/linuxserver/jackett",
        "flaresolverr/flaresolverr"
      ],
      "excludePackageNames": ["actualbudget/actual-server"],
      "pinDigests": true,
      "separateMinorPatch": false,
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "no-automerge-major",
      "automerge": false,
      "pinDigests": true
    }
  ],
  "docker": {
    "enabled": true,
    "pinDigests": true
  },
  "enabledManagers": ["docker-compose", "dockerfile"]
}
